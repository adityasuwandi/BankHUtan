<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow-->
    <item>
        <shape  android:shape="rectangle">
            <solid android:color="white" />
            <corners android:radius="23dp" />
